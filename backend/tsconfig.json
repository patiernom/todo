{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": [
    "test"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
